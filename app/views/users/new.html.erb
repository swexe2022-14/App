    </h1>
</header>
    
<div class="container">    
    <h2>ログイン画面</h2>
    
    <p>
    <%= form_for @user , url: {action: :create} do |f| %>
        <%= f.label :uid, 'ユーザー名' %>
        <%= f.text_field :uid %><br>
        <%= f.label :pass, 'パスワード' %>
        <%= f.text_field :pass %><br>
        <%= f.label :code, 'パスコード(数字でのみご入力してください)' %>
        <%= f.number_field :code %><br>
        
        <button class="button is-submit"><%= f.submit '登録' %></button>
    <% end %>
    </p>
    
    <p>
        <button><%= link_to '戻る', :back %></button>
    </p>
</div>
    
