<header>
    <h1>
        Money Management
    </h1>
</header>

<div>
    <h2>支出内容編集ページ</h2>

    <%= form_for @spend, url: {action: :update} do |k| %>
        <%= k.label :spendmoney, '使用金額' %>
        <%= k.number_field :spendmoney %><br>
        <%= k.select :insititution, @financials.map{ |financial| [financial.insititution, financial.insititution]} %><br>
        <div class="left button">
            <%= k.submit '更新' %>
        </div>
    <% end %>
    
    <div class="left link">
        <%= link_to "戻る", spends_path %>
    </div>
</div>

